<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">

    <Button
        android:id="@+id/bottom_sheet_closer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_gravity="end"
        android:textColor="@color/bazookasPrimary"
        android:textAllCaps="false"
        android:text="@string/close"/>

    <ImageView
        android:id="@+id/bottom_sheet_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/bottom_sheet_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"/>

    <TextView
        android:id="@+id/bottom_sheet_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.2"
        android:textAllCaps="true"
        android:textColor="@color/light"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/bottom_sheet_place"
            android:drawableStart="@drawable/ic_location_dark_24dp"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/bottom_sheet_favorites_count"
            android:drawableStart="@drawable/ic_favorite_dark_24dp"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_margin"
            android:drawablePadding="4dp"/>

        <TextView
            android:id="@+id/bottom_sheet_retweet_count"
            android:drawableStart="@drawable/ic_retweet_dark_24dp"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/activity_margin"
            android:drawablePadding="4dp"/>

    </LinearLayout>

</LinearLayout>